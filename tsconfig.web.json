{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/shared/**/*",
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.svelte"
  ],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "checkJs": true,
    "noImplicitAny": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  }
}